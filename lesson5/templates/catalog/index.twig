<h2>Каталог</h2>

    {% for item in catalog %}
<div>
    <h3><a href="/product/card/?id={{ item.id }}">{{ item.name }}</a></h3>
    <img src="/images/{{ item.image }}" alt="{{ item.name }}" width="150">
    <p>price: {{ item.price }}</p>
    <button>Купить</button>
</div>
    {% else %}
        Нет товаров
    {% endfor %}

<a href="/product/catalog/?page={{ page }}">Еще</a>
